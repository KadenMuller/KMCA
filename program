    <script>
        // Display User Name
        document.getElementById('user-display').innerText = localStorage.getItem('chessStudent');

        function handleLogout() {
            localStorage.removeItem('chessStudent');
            window.location.href = 'index.html';
        }

        const courseData = {
            'pawn': {
                title: "The Pawn Foundation",
                desc: "Learn how the pieces move and the golden rules of the opening.",
                video: "https://www.youtube.com/embed/OCSbzArwB10",
                pgn: "https://lichess.org/study/embed/9M1jN7G0/JjO1kR7K#0"
            },
            'openings': {
                title: "The Opening Lab",
                desc: "Study the London System. Solid, easy to learn, and effective.",
                video: "https://www.youtube.com/embed/HiL5vO87fso",
                pgn: "https://lichess.org/study/embed/fD5C1kZ8/2jXJ1Z1K#0"
            },
            'tactics': {
                title: "Tactical Mastery",
                desc: "Train your eyes to spot the winning combinations.",
                video: "https://www.youtube.com/embed/1JcM5a4g6gU",
                pgn: "https://lichess.org/study/embed/v9Z5k1k8/1jXJ1Z1K#0"
            },
            'endgame': {
                title: "Endgame Expert",
                desc: "If you can't checkmate, you can't win. Learn the King & Pawn essentials.",
                video: "https://www.youtube.com/embed/mCj8d8M9g9g",
                pgn: "https://lichess.org/study/embed/A8jN9G50/3jXJ1Z1K#0"
            },
            'blitz': {
                title: "Speed Chess Secrets",
                desc: "Tips and tricks for 3-minute and 5-minute games.",
                video: "https://www.youtube.com/embed/hJ7k5l4m3n2",
                pgn: "https://lichess.org/study/embed/cK9N2H40/5jXJ1Z1K#0"
            }
        };

        function openCourse(courseId) {
            const data = courseData[courseId];
            if(!data) return;

            document.getElementById('viewer-title').innerText = data.title;
            document.getElementById('viewer-desc').innerText = data.desc;
            document.getElementById('video-frame').src = data.video;
            document.getElementById('pgn-frame').src = data.pgn;

            document.getElementById('main-grid').style.display = 'none';
            document.getElementById('course-viewer').style.display = 'block';
            window.scrollTo(0,0);
        }

        function closeCourse() {
            document.getElementById('video-frame').src = "";
            document.getElementById('course-viewer').style.display = 'none';
            document.getElementById('main-grid').style.display = 'block';
        }
    </script>
